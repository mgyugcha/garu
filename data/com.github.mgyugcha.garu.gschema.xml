<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/com/github/mgyugcha/garu/" id="com.github.mgyugcha.garu">

    <key type="b" name="use-dark-theme">
      <default>false</default>
      <summary>Dark Theme</summary>
      <description></description>
    </key>

    <key type="b" name="show-settings-button">
      <default>false</default>
    </key>

    <!-- volume -->
    <key type="d" name="volume">
      <default>1</default>
      <summary>Volume for the player</summary>
    </key>

    <!-- equalizer -->
    <key type="b" name="equalizer-enabled">
      <default>false</default>
      <summary>Equalizer enabled</summary>
    </key>
    <key type="i" name="equalizer-preset">
      <default>0</default>
      <summary>Equalizer preset</summary>
      <description>Default equalizer preset</description>
    </key>
    <key type="d" name="eq-custom-band0">
      <default>0.0</default>
    </key>
    <key type="d" name="eq-custom-band1">
      <default>0.0</default>
    </key>
    <key type="d" name="eq-custom-band2">
      <default>0.0</default>
    </key>
    <key type="d" name="eq-custom-band3">
      <default>0.0</default>
    </key>
    <key type="d" name="eq-custom-band4">
      <default>0.0</default>
    </key>
    <key type="d" name="eq-custom-band5">
      <default>0.0</default>
    </key>
    <key type="d" name="eq-custom-band6">
      <default>0.0</default>
    </key>
    <key type="d" name="eq-custom-band7">
      <default>0.0</default>
    </key>
    <key type="d" name="eq-custom-band8">
      <default>0.0</default>
    </key>
    <key type="d" name="eq-custom-band9">
      <default>0.0</default>
    </key>

    <!-- crossfade -->
    <key type="b" name="crossfade-enabled">
      <default>true</default>
      <summary>Crossfade enabled</summary>
    </key>
    <key type="i" name="crossfade-time">
      <default>3</default>
      <summary>Time for the transition</summary>
    </key>
    <key type="b" name="crossfade-change-track">
      <default>true</default>
      <summary>Crossfade when the user change the track</summary>
    </key>
    <key type="b" name="crossfade-track-ends">
      <default>true</default>
      <summary>Crossfade before the track ends</summary>
    </key>

    <!-- library position -->
    <key type="s" name="library-option-position">
      <default>'0'</default>
    </key>

    <!-- folder browser -->
    <key type="s" name="folder-browser-directory">
      <default>'default'</default>
      <summary>The last directory to which the user has accessed</summary>
    </key>

  </schema>
</schemalist>
